{% extends "DigitalUserBundle::layout.html.twig" %}

{% block title %} {{ parent() }} {% endblock %}

	{% block user_body%}
	     {% if user is not null %}
	        
		    <i>  par: {{ user.nom }}   {{ user.prenom  }}  </i>
	        <div class="well">
			      {{user.email}}
	        </div>
	     <p> 
					 <a href="{{path('user_homepage')}}" class="btn"> 
						 <i class="icon-chevron-left"></i>
						 Return Home
					 </a>
					 <a href="{{ path('user_update', {'id': user.id}) }}" class="btn">
						 <i class="icon-edit"></i>
